      "outline-color",
      "outline-offset",
      "background",
      "background-color",
      "background-image",
      "background-repeat",
      "background-attachment",
      "background-position",
      "background-position-x",
      "background-position-y",
      "background-clip",
      "background-origin",
      "background-size",
      "box-decoration-break",
      "box-shadow",
      "quotes",
      "counter-reset",
      "counter-increment",
      "resize",
